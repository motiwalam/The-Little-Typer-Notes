;@begin code not
(claim not UNat)
(define not cosgn)
;@end

;@begin code and
(claim and BinNat)
(define and *)
;@end

;@begin code or
(claim or BinNat)
(define or
    (lambda (p q) (sgn (+ p q))))
;@end

;@begin code xor
(claim xor BinNat)
(define xor
    (lambda (p q) (== 1 (+ p q))))
;@end

